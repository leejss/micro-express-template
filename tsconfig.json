{
  "compilerOptions": {
    "lib": ["ES5", "ES6"],
    "target": "es6",
    "moduleResolution": "node",
    "module": "CommonJS",
    "declaration": false,
    "noLib": false,
    // --- for use decorator
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    // ----------------------
    "sourceMap": true,
    "pretty": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": true,
    "allowUnusedLabels": true,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noImplicitUseStrict": false,
    "outDir": "dist/",
    "listFiles": false,
    "noEmitHelpers": false
    /*
   We do not want to generate custom helper functions like __awaiter while doing async await, hence we made it noEmitHelpers false
   */
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "compileOnSave": true
}
